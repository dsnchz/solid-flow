{
  "name": "solid-flow",
  "version": "0.1.0",
  "description": "Solid Flow: an unofficial port of Svelte Flow for SolidJS -- a highly customizable Solid library for building node-based editors, workflow systems, diagrams and more.",
  "type": "module",
  "author": "Daniel Sanchez <dsanc89@icloud.com>",
  "license": "MIT",
  "homepage": "https://github.com/thedanchez/solid-flow#readme",
  "bugs": {
    "url": "https://github.com/thedanchez/solid-flow/issues"
  },
  "keywords": [
    "diagram",
    "graph",
    "node-based UI",
    "solid",
    "solidjs",
    "solid-js",
    "solid-flow",
    "workflow",
    "xyflow"
  ],
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "dev": "vite",
    "format": "prettier . --check",
    "format:fix": "prettier . --write",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "serve": "vite preview",
    "start": "vite",
    "test": "vitest run",
    "test:cov": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@solidjs/router": "^0.15.3",
    "@solidjs/testing-library": "^0.8.10",
    "@testing-library/jest-dom": "^6.6.4",
    "@types/bun": "^1.2.19",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vitest/coverage-istanbul": "^3.2.4",
    "@xyflow/system": "^0.0.62",
    "eslint": "^9.32.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-solid": "^0.14.5",
    "globals": "^16.3.0",
    "jiti": "^2.5.1",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "tsup-preset-solid": "^2.2.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0",
    "vite": "^7.1.1",
    "vite-plugin-solid": "^2.11.8",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@xyflow/system": ">=0.0.62",
    "solid-js": ">=1.8.0"
  },
  "dependencies": {
    "@solid-primitives/map": "^0.7.2",
    "@solid-primitives/media": "^2.3.3",
    "clsx": "^2.1.1"
  },
  "main": "./dist/index/index.js",
  "module": "./dist/index/index.js",
  "types": "./dist/index/index.d.ts",
  "browser": {},
  "exports": {
    ".": {
      "solid": "./dist/index/index.jsx",
      "import": {
        "types": "./dist/index/index.d.ts",
        "default": "./dist/index/index.js"
      }
    },
    "./styles": {
      "import": {
        "types": "./dist/styles/index.d.ts",
        "default": "./dist/styles/index.js"
      }
    }
  },
  "typesVersions": {
    "*": {
      "styles": [
        "./dist/styles/index.d.ts"
      ]
    }
  }
}
